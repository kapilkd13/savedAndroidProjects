<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/btn_bg</item>
        <item name="colorPrimaryDark">#991f58c1</item>
        <item name="colorAccent">@color/btn_bg</item>
        <item name="android:actionBarSize">35dp</item>

        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="title_style">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Tabstyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/btn_bg</item>
        <item name="elevation">0dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:actionBarSize">15dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="done">Done</style>
</resources>
